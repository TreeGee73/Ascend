<div class="body-index">
  <!-- Header: Contains only hero image -->
  <header class="hero"></header>

  <!-- Container: Text and Data Collection for Game from Player -->
  <section class="content container cont-bg-mgr">
    <div class="row">
      <!-- Row 1: Challenge -->
      <div class="col-md-12">
        <h1>Can you duel your way to the top of the tower??</h1>
      </div>
    </div>
    <div class="row">
      <!-- Row 2: Player Name Entry -->
      <div class="col-md-12">
        <form>
          <div class="form-group">
            <label for="playerName">Enter Your Player Name:</label>
            <input
              type="text"
              class="form-control"
              id="playerName"
              placeholder="SmashnBtns02"
            />
          </div>
        </form>
      </div>
    </div>
    <div class="row" style="margin-top: 2rem">
      <!-- Row 3: Character Selection -->
      <h1>Select Your Champion</h1>
    </div>
    <div class="row" style="margin-top: 2rem">
      <!-- Warrior Card -->
      <div class="col-md-3">
        <div class="card">
          <header class="card__thumb">
            <img src="assets/images/warrior.jpg" />
          </header>
          <div class="card__body">
            <h2 class="card__title">Bruth Spiritreaper</h2>
            <h3 class="card__title">Warrior</h3>
            <div class="card__subtitle">
              Warriors have high health, but have a slower attack speed
            </div>
            <p class="card__description">
              Health: 200<br />Attack: 50<br />Defense: 40<br />Speed: 60
            </p>
            <footer class="card__footer">
              <a
                href="/combat?character=warrior"
                class="btn btn-primary btn-start"
                id="warriorBtn"
                >Enter the Tower!</a
              >
            </footer>
          </div>
        </div>
      </div>
      <!-- Rogue Card -->
      <div class="col-md-3">
        <div class="card">
          <header class="card__thumb">
            <img src="assets/images/rogue.jpg" />
          </header>
          <div class="card__body">
            <h2 class="card__title">Lacina</h2>
            <h3 class="card__title">Rogue</h3>
            <div class="card__subtitle">
              Rogues have high speed, deal mediocre health damage, but have a
              chance to crit
            </div>
            <p class="card__description">
              Health: 120<br />Attack: 70<br />Defense: 20<br />Speed: 100
            </p>
            <footer class="card__footer">
              <a href="/combat" class="btn btn-primary btn-start" id="rogueBtn"
                >Enter the Tower!</a
              >
            </footer>
          </div>
        </div>
      </div>
      <!-- Mage Card -->
      <div class="col-md-3">
        <div class="card">
          <header class="card__thumb">
            <img src="assets/images/mage.jpg" />
          </header>
          <div class="card__body">
            <h2 class="card__title">Ziu Qaim</h2>
            <h3 class="card__title">Mage</h3>
            <div class="card__subtitle">
              Mages have low health, but deal more damage
            </div>
            <p class="card__description">
              Health: 100<br />Attack: 150<br />Defense: 0<br />Speed: 75
            </p>
            <footer class="card__footer">
              <a href="/combat" class="btn btn-primary btn-start" id="mageBtn"
                >Enter the Tower!</a
              >
            </footer>
          </div>
        </div>
      </div>
      <!-- Hunter Card -->
      <div class="col-md-3">
        <div class="card">
          <header class="card__thumb">
            <img src="assets/images/hunter.jpg" />
          </header>
          <div class="card__body">
            <h2 class="card__title">Gwendolyn Helton</h2>
            <h3 class="card__title">Hunter</h3>
            <div class="card__subtitle">
              Hunters have a balance of health, speed, and damage
            </div>
            <p class="card__description">
              Health: 150<br />Attack: 90<br />Defense: 30<br />Speed: 80
            </p>
            <footer class="card__footer">
              <a href="/combat" class="btn btn-primary btn-start" id="hunterBtn"
                >Enter the Tower!</a
              >
            </footer>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End Container -->
</div>
<script src="assets/js/name.js"></script>
